                                <Setter Property="Margin" Value="20,0,0,0" />
                                <Setter Property="HorizontalAlignment" Value="Stretch" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="AutoToolTipPlacement" Value="BottomRight" />
                                <Setter Property="LargeChange" Value="100" />
                                <Setter Property="SmallChange" Value="10" />
                                <Setter Property="Maximum" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item2}" />
                                <Setter Property="Minimum" Value="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item1}" />
                            </Style>

                            <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="TextBox">
                                <Setter Property="materialDesign:TextFieldAssist.SuffixText" Value="us" />
                                <Setter Property="Width" Value="50"/>
                            </Style>

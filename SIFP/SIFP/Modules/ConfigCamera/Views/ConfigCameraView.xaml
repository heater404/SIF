                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Visibility" Value="{Binding IsShow}" />
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>

                                    <Slider
                                        x:Name="Slider9"
                                        Grid.Column="2"
                                        MinWidth="100"
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        AutoToolTipPlacement="BottomRight"
                                        LargeChange="100"
                                        Maximum="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item2}"
                                        Minimum="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item1}"
                                        SmallChange="10"
                                        Value="{Binding IntegrationTimes[3].Phase1_4Int, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntConver}}" />
                                    <TextBox
                                        Grid.Column="3"
                                        Width="40"
                                        Text="{Binding ElementName=Slider9, Path=Value, UpdateSourceTrigger=PropertyChanged}" />

                                </Grid>

                                <Grid
                                    Grid.Row="1"
                                    Margin="0,10"
                                    Visibility="{Binding SubFrameModes[3], Converter={StaticResource SubFrameModeConver}, ConverterParameter=Phase5_8}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Width="30"
                                        Text="N8" />
                                    <ComboBox
                                        Grid.Column="1"
                                        Width="90"
                                        Margin="10,0,0,0"
                                        HorizontalContentAlignment="Center"
                                        DisplayMemberPath="Description"
                                        ItemsSource="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.Frequencies}"
                                        SelectedValue="{Binding PLLDLLDivs[3].Phase5_8Div}"
                                        SelectedValuePath="SelectedModel">
                                        <ComboBox.ItemContainerStyle>
                                            <Style TargetType="ComboBoxItem">
                                                <Setter Property="Visibility" Value="{Binding IsShow}" />
                                            </Style>
                                        </ComboBox.ItemContainerStyle>
                                    </ComboBox>

                                    <Slider
                                        x:Name="Slider10"
                                        Grid.Column="2"
                                        MinWidth="100"
                                        Margin="20,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        AutoToolTipPlacement="BottomRight"
                                        LargeChange="100"
                                        Maximum="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item2}"
                                        Minimum="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item1}"
                                        SmallChange="10"
                                        Value="{Binding IntegrationTimes[3].Phase5_8Int, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntConver}}" />
                                    <TextBox
                                        Grid.Column="3"
                                        Width="40"
                                        Text="{Binding ElementName=Slider10, Path=Value, UpdateSourceTrigger=PropertyChanged}" />

                                </Grid>

                                <Grid
                                    Grid.Row="2"
                                    Margin="0,10"
                                    Visibility="{Binding SubFrameModes[3], Converter={StaticResource SubFrameModeConver}, ConverterParameter=SpecialPhase}">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Width="30"
                                        Text="{Binding SpecialFrameModes[3]}" />

                                    <Slider
                                        x:Name="Slider11"
                                        Grid.Column="2"
                                        MinWidth="100"
                                        Margin="10,0,0,0"
                                        HorizontalAlignment="Stretch"
                                        AutoToolTipPlacement="BottomRight"
                                        LargeChange="100"
                                        Maximum="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item2}"
                                        Minimum="{Binding RelativeSource={RelativeSource Mode=FindAncestor, AncestorType=UserControl}, Path=DataContext.IntegrationTimeRange.Item1}"
                                        SmallChange="10"
                                        Value="{Binding IntegrationTimes[3].SpecialPhaseInt, UpdateSourceTrigger=PropertyChanged, Converter={StaticResource IntConver}}">
                                        <Slider.IsEnabled>
                                            <MultiBinding Converter="{StaticResource 4BgEnableConver}">
                                                <Binding Path="NumSubFramePerFrame[3]" />
                                                <Binding Path="SubFrameModes[3]" />
                                                <Binding Path="SpecialFrameModes[3]" />
                                            </MultiBinding>
                                        </Slider.IsEnabled>
                                    </Slider>
                                    <TextBox
                                        Grid.Column="3"
                                        Width="40"
                                        Text="{Binding ElementName=Slider11, Path=Value, UpdateSourceTrigger=PropertyChanged}">
                                        <TextBox.IsEnabled>
                                            <MultiBinding Converter="{StaticResource 4BgEnableConver}">
                                                <Binding Path="NumSubFramePerFrame[3]" />
                                                <Binding Path="SubFrameModes[3]" />
                                                <Binding Path="SpecialFrameModes[3]" />
                                            </MultiBinding>
                                        </TextBox.IsEnabled>
                                    </TextBox>

                                </Grid>
                            </Grid>
                        </Grid>
                    </Grid>
                </GroupBox>

                <GroupBox
                    Grid.Row="2"
                    Margin="10"
                    Header="FPS">
                    <Slider
                        MinWidth="100"
                        Margin="10,10"
                        HorizontalAlignment="Stretch"
                        AutoToolTipPlacement="BottomRight"
                        LargeChange="5"
                        Maximum="{Binding MaxFPS}"
                        Minimum="1"
                        SmallChange="1"
                        Value="{Binding FPS, UpdateSourceTrigger=PropertyChanged}" />
                </GroupBox>

                <GroupBox
                    Grid.Row="3"
                    Margin="10"
                    Header="Resolution">
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <Grid Grid.Column="1" Margin="10,0,10,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="auto" />
                                <ColumnDefinition Width="auto" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <!--<StackPanel
                                Grid.Column="0"
                                VerticalAlignment="Top"
                                IsEnabled="{Binding CanXStep}"
                                Orientation="Horizontal">
                                <TextBlock Text="XStep : " />
                                <ComboBox
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ItemsSource="{Binding Step}"
                                    SelectedIndex="{Binding XStepSelectedIndex, ValidatesOnExceptions=True}" />
                            </StackPanel>

                            <StackPanel
                                Grid.Column="1"
                                Margin="5,0,0,0"
                                VerticalAlignment="Top"
                                Orientation="Horizontal">
                                <TextBlock Text="YStep : " />
                                <ComboBox
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    ItemsSource="{Binding Step}"
                                    SelectedIndex="{Binding YStepSelectedIndex, ValidatesOnExceptions=True}" />
                            </StackPanel>-->

                            <!--<StackPanel
                                Grid.Row="1"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                Orientation="Vertical">
                                <CheckBox
                                    HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    Content="Analog Binning"
                                    IsChecked="{Binding AnalogBinning, ValidatesOnExceptions=True}" />
                                <CheckBox
                                    Margin="0,10,0,0"
                                    HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Left"
                                    VerticalContentAlignment="Center"
                                    Content="Digital Binning"
                                    IsChecked="{Binding DigitalBinning}"
                                    IsEnabled="{Binding CanDigitalBinning}" />
                            </StackPanel>-->

                            <StackPanel
                                Grid.Row="2"
                                Grid.Column="0"
                                Grid.ColumnSpan="2"
                                VerticalAlignment="Bottom"
                                Orientation="Horizontal">
                                <TextBlock FontWeight="Bold" Text="Resolution : " />
                                <TextBlock FontWeight="Bold" Text="{Binding Resolution}" />
                            </StackPanel>
                        </Grid>
                    </Grid>
                </GroupBox>

                <GroupBox
                    Grid.Row="4"
                    Margin="10"
                    Header="Mirror">
                    <Grid Margin="0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition />
                            <ColumnDefinition />
                        </Grid.ColumnDefinitions>
                        <CheckBox
                            Grid.Column="0"
                            VerticalContentAlignment="Center"
                            Content="Horizontal"
                            IsChecked="{Binding HorizontalMirror}" />
                        <CheckBox
                            Grid.Column="1"
                            VerticalContentAlignment="Center"
                            Content="Vertical"
                            IsChecked="{Binding VerticalMirror}" />
                    </Grid>
                </GroupBox>

                <Border Grid.Row="5" Margin="10">
                    <Button
                        Width="90"
                        Height="30"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Command="{Binding ApplyConfigCameraCmd}"
                        Content="Apply"
                        Style="{DynamicResource MyButtonStyle}" />
                </Border>
            </Grid>
        </ScrollViewer>
    </DockPanel>
</UserControl>

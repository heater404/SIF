<Window
    x:Class="SIFP.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:core="clr-namespace:SIFP.Core;assembly=SIFP.Core"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:prism="http://prismlibrary.com/"
    Title="{Binding Title}"
    prism:ViewModelLocator.AutoWireViewModel="True"
    Background="{DynamicResource MaterialDesignPaper}"
    FontFamily="{materialDesign:MaterialDesignFont}"
    TextElement.FontSize="14"
    TextElement.FontWeight="Medium"
    TextElement.Foreground="{DynamicResource MaterialDesignBody}">
    <materialDesign:DrawerHost>
        <DockPanel LastChildFill="True">
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.MenuRegion}" DockPanel.Dock="Top" />
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.ToolRegion}" DockPanel.Dock="Top" />
            <StackPanel
                Margin="0,5,0,0"
                DockPanel.Dock="Bottom"
                Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <StackPanel.Resources>
                        <Style BasedOn="{StaticResource MaterialDesignTabRadioButton}" TargetType="RadioButton">
                            <Setter Property="Margin" Value="0" />
                        </Style>
                        <Style BasedOn="{StaticResource MaterialDesignFlatButton}" TargetType="Button">
                            <Setter Property="Margin" Value="0" />
                        </Style>
                    </StackPanel.Resources>
                    <Button
                        Command="{x:Static materialDesign:DrawerHost.OpenDrawerCommand}"
                        CommandParameter="{x:Static Dock.Left}"
                        Content="ConfigCamera"
                        Foreground="{StaticResource MaterialDesignDarkForeground}" />
                    <RadioButton Content="Depth" IsChecked="True" />
                    <RadioButton Content="RegMap" IsChecked="False" />
                </StackPanel>

                <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.RightRegion}" />
            </StackPanel>
        </DockPanel>
        <materialDesign:DrawerHost.RightDrawerContent>
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.WatchLogRegion}" />
        </materialDesign:DrawerHost.RightDrawerContent>

        <materialDesign:DrawerHost.LeftDrawerContent>
            <ContentControl prism:RegionManager.RegionName="{x:Static core:RegionNames.LeftRegion}" />
        </materialDesign:DrawerHost.LeftDrawerContent>
    </materialDesign:DrawerHost>
</Window>